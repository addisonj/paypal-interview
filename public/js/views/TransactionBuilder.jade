.transaction-builder
  form.transaction-form
    fieldset.row
      label To:
      input(type="email", required="required", name="email", placeholder="john@doe.com", rv-value="transaction:email", rv-on-input="controller.onEmailChange")
      span.is-valid-email

    fieldset.row
      label Name (optional):
      input(type="text", name="name", placeholder="John Doe", rv-value="transaction:name")

    fieldset.row
      label Amount:{transaction:currency | currencySymbol}
      input(type="text", required="required", name="amount", placeholder="1.00", rv-value="transaction:amount | currency", rv-on-input="controller.checkValid").transaction-amount
      select(name="currency", rv-value="transaction:currency").currency-select
        option(value="USD", selected=true) USD
        option(value="EUR") EUR
        option(value="JPY") JPY

    fieldset.row
      label Message (optional):
      textarea(name="message", rows="2", rv-value="transaction:message")

    p What's this payment for?

    fieldset.row
      input(type="radio", name="purpose", value="PERSONAL", rv-checked="transaction:purpose")#personal.transaction-purpose
      label(for="personal").personal-label I'm sending money to family or friends
      input(type="radio", name="purpose", value="PAYMENT", rv-checked="transaction:purpose")#payment.transaction-purpose
      label(for="payment").payment-label I'm paying for goods or services

